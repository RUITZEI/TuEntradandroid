<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TuEntradaTheme" parent="TuEntradaTheme.Base"/>

    <style name="TuEntradaTheme.Base" parent="Theme.AppCompat">
        <item name="android:windowNoTitle">true</item>
        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">@color/TuEntradaMain</item>
        <!--  <item name="colorPrimary">@android:color/holo_blue_dark</item> darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/darkYellow</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/darkYellow</item>
        <item name="windowActionBar">false</item>
        <!--   For using a Toolbar Instead
                <item name="windowActionBar">false</item>
        -->
        <item name="windowActionModeOverlay">true</item>
        <item name="android:actionBarStyle" >@style/TuEntradaTheme.ActionBarStyle</item>

        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="android:textAppearanceSmallPopupMenu">@style/PopupMenuTextAppearanceLarge</item>
        <item name="android:textAppearanceLargePopupMenu">@style/PopupMenuTextAppearanceLarge</item>


    </style>

    <style name="ToolBarStyle" parent="@android:style/Theme.Holo">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.ActionBar</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="TuEntradaTheme.ActionBarStyle" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="android:icon">@drawable/ic_launcher</item>
    </style>

    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@color/TuEntradaMainSecondary</item>
    </style>
    <style name="PopupMenuTextAppearanceLarge" parent="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large">
        <item name="android:textColor">#000000</item>
    </style>
    <style name="PopupMenuTextAppearanceSmall" parent="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Small">
        <item name="android:textColor">#000000</item>
    </style>

</resources>