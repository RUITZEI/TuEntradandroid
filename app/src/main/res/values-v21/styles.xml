<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TuEntradaTheme" parent="Theme.AppCompat.NoActionBar">

        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="android:colorPrimary">@color/darkGray</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="android:colorPrimaryDark">@color/darkGray</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="android:colorAccent">@color/darkerGray</item>

        <item name="android:statusBarColor">@color/darkerGray</item>

        <!--   For using a Toolbar Instead
                <item name="windowActionBar">false</item>


        -->
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:actionBarStyle" >@style/XapoTheme.ActionBarStyle</item>


    </style>

    <style name="ToolBarStyle" parent="">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.ActionBar</item>
    </style>

    <style name="XapoTheme.ActionBarStyle" parent="android:Widget.Material.ActionBar.Solid">
        <item name="android:icon">@drawable/ic_launcher</item>
    </style>
</resources>