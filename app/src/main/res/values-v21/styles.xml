<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TuEntradaTheme" parent="Theme.AppCompat.NoActionBar">

        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">@color/yellow</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/darkYellow</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/darkYellow</item>

        <item name="android:statusBarColor">@color/darkYellow</item>

        <!--   For using a Toolbar Instead
                <item name="windowActionBar">false</item>


        -->
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:actionBarStyle" >@style/XapoTheme.ActionBarStyle</item>

        <item name="android:textAppearanceSmallPopupMenu">@style/PopupMenuTextAppearanceLarge</item>
        <item name="android:textAppearanceLargePopupMenu">@style/PopupMenuTextAppearanceLarge</item>


    </style>

    <style name="ToolBarStyle" parent="">
        <item name="popupTheme">@style/PopupMenu</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.ActionBar</item>
    </style>

    <style name="XapoTheme.ActionBarStyle" parent="android:Widget.Material.ActionBar.Solid">
        <item name="android:icon">@drawable/ic_launcher</item>
    </style>

    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@color/popUpBackground</item>
    </style>
    <style name="PopupMenuTextAppearanceLarge" parent="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large">
        <item name="android:textColor">#000000</item>
    </style>
    <style name="PopupMenuTextAppearanceSmall" parent="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Small">
        <item name="android:textColor">#000000</item>
    </style>
</resources>